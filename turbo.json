{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": [],
			"outputs": ["dist/**", "docs/**"]
		},
		"test": {
			"dependsOn": [],
			"outputs": []
		},
		"check": {
			"dependsOn": [],
			"outputs": []
		},
		"fix": {
			"dependsOn": [],
			"outputs": []
		},
		"bundle": {
			"dependsOn": [],
			"outputs": ["build/**"]
		},
		"ci": {
			"dependsOn": ["build", "lint", "test", "bundle"],
			"outputs": ["dist/**", "docs/**", "build/**"]
		},
		"clean": {
			"cache": false
		},
		"release": {
			"cache": false
		},
		"start": {
			"cache": false
		}
	}
}
